<% content_for :section  do %>
    Home
<% end %>
<% if @posts.count > 0 %>
    <h1 class="display-5 text-center mt-5 mb-5">All Posts</h1>
    <% @posts.each do |post| %>
    <div class="card w-100 mt-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%=link_to post.title , post_path(post) %></h5>
    <p class="card-text"><%= post.body %></p>
        <p class="card-text">Created at: <%= post.created_at %> by: <%= (@users.find {|user| user.id == post.user_id }).username %></p>
  </div>
</div>

<% end %>
<% else%>
<h1>No post</h1>
<% end%>