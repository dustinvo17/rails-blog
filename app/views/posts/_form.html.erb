<%= form_for @post , html:{class:"mt-5"} do |f| %>

<div class="form-group"> 
    <%= f.label :title , 'Title'  %>
    <%= f.text_field :title , class:"form-control" %>
</div>
<div class="form-group">
        <%= f.label :body , 'Body' %>
    <%= f.text_field :body, class:"form-control" %>
</div>
        <%= f.submit  class:"btn btn-primary" %>
<% end %>